@model List<Category>


<div class="pull-top-85px">
	<div class="container">
		<div class="row">

			@foreach( var item in Model){

			<div class="col-xl-2 col-lg-3 col-md-4 col-6 sm-mb-25px">
					<a href="/Items/DisplayCategoryIngredient/?categoryId=@item.CategoryId" class="d-block box-shadow background-main-color text-white hvr-float">
					<div class="thum"><img src="http://placehold.it/450x250" alt=""></div>
					<h4 class="text-center padding-15px"> @item.Title</h4>
				</a>
			</div>
			
			}


		</div>
	</div>
</div>


