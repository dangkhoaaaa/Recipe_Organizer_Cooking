@model List<FeedBackOnOnceRecipeModel>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="margin-bottom-80px box-shadow">
	<div class="padding-30px background-white">
		<h3><i class="far fa-star margin-right-10px text-main-color"></i> Review &amp; Rating</h3>
		<hr>
		@if (Model != null && Model.Count > 0)
		{
			var currentUserId = "";
			<ul class="commentlist padding-0px margin-0px list-unstyled text-grey-3">
				@foreach (var item in Model)
				{
					if (item.name != currentUserId)
					{
						<li class="border-bottom-1 border-grey-1 margin-bottom-30px">
							<img src="@item.Avatar" class="float-left margin-right-20px border-radius-60 margin-bottom-20px" alt="" width="50"
								 height="50" style="max-width: 50px; max-height: 50px; min-width: 50px; min-height: 50px; border-radius: 50%;">
							<div class="margin-left-85px">
								<a class="d-inline-block text-dark text-medium margin-right-20px" href="#">
									@item.name
								</a>
								<span class="text-extra-small">
									Date: <a href="#" class="text-main-color">
										@item.Date
									</a>
								</span>

								<div class="rating">
									<ul>
										<li class="@((item.Rating >= 1) ? "active" : "")"></li>
										<li class="@((item.Rating >= 2) ? "active" : "")"></li>
										<li class="@((item.Rating >= 3) ? "active" : "")"></li>
										<li class="@((item.Rating >= 4) ? "active" : "")"></li>
										<li class="@((item.Rating >= 5) ? "active" : "")"></li>
									</ul>
								</div>
								<p class="margin-top-15px text-grey-2">
									@item.Title
								</p>
								<p class="margin-top-15px text-grey-2">
									@item.Description
								</p>
								@if (item.Images != null && item.Images != "")
								{
									<div class="margin-bottom-10px" style="width: 100%; max-width: 250px; height: 210px; overflow: hidden;">
										@*@foreach (var img in item.Images)
										{
											<img src="@img" style="width: 100%; height: 210px; object-fit: cover;">
										}*@
										<img src="@item.Images" style="width: 100%; height: 100%; object-fit: cover;">
									</div>
								}
							</div>
						</li>
					}
					currentUserId = item.name;
				}
			</ul>
		}
		else
		{
			<h2>Not Have Review</h2>
		}
	</div>
</div>


