@model List<Services.Data.RecipeUserData>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
	ViewBag.Title = "Saved Recipes & Collections";
	Layout = "~/Areas/Identity/Views/Shared/_ProfileLayout.cshtml";
}


<div class="row">
	<div class="col-lg-12 margin-bottom-40px">
		<div class="box-shadow border-radius-10 overflow-hidden">
			<div class="padding-30px background-white">
				<h2>Saved Recipes & Collections</h2>
				<p>All Saved Items</p>
			</div>
		</div>
	</div>
</div>


@if (Model.Count > 0)
{
	<div class="container margin-bottom-100px">
		<div class="row">

			@foreach (var item in Model)
			{
				<!-- item -->
				<div class="col-lg-12 margin-bottom-30px">
					<div class="background-white thum-hover box-shadow hvr-float full-width">
						<div class="float-md-left margin-right-30px thum-xs">
							<a href="/Recipe/RecipeDetail/?id=@item.RecipeId">
								<img class="width-250px" src="@item.Image" alt="">
							</a>
						</div>
						<div class="padding-25px">
							<div class="rating">
								<ul>
									<li class="active"></li>
									<li class="active"></li>
									<li class="active"></li>
									<li class="active"></li>
									<li></li>
									-
									<a href="/Recipe/RecipeDetail/?id=@item.RecipeId">@item.AvgRate (0)</a>
								</ul>
							</div>
							<h3>
								<a class="d-block text-dark text-capitalize text-medium margin-tb-15px"
								   href="/Recipe/RecipeDetail/?id=@item.RecipeId">@item.Title</a>
							</h3>
							<hr>
							<div class="row no-gutters">
								<div class="col-4 text-left">
									<a href="/User/ToggleCollection?recipeId=@item.RecipeId" class="text-red">
										<i class="icon_heart"></i> Unsave
									</a>
								</div>
								@*<div class="col-8 text-right">
									<a href="#" class="text-grey-2">
										<i class="fas fa-users"></i> 6-8 servings
									</a>
								</div>*@
							</div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
				<!-- // item -->
			}
		</div>

	</div>
}
else
{
	<div class="col-lg-12 margin-bottom-40px">
		<div class="box-shadow border-radius-10 overflow-hidden">
			<div class="padding-30px background-white">
				<div class="text-center">
					<h3>You haven't saved anything yet. Start browsing!</h3>
					<p>You can save items to your profile by clicking the heart icon in the share bar.</p>
					<a href="@Url.Action("Index", "Home")"
					   class="btn box-shadow margin-top-50px padding-tb-10px btn-sm border-2 border-radius-30 btn-inline-block width-210px background-second-color text-white">
						<i class="fas fa-undo"></i> Back Home
					</a>
				</div>
			</div>
		</div>
	</div>
}

