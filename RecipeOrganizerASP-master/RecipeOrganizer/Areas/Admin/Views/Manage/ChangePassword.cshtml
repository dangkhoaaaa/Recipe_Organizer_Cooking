@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    Layout = "_AuthenLayout";
}
<style>
    label {
        font-size: 1rem;
    }
    .text-danger {
        color:red;
    }

    .warning-msg {
        font-size: 17px;
        color: white;
        background-color: #f44336;
        padding: 10px;
    }
</style>
<section id="wrapper" class="error-page">
   
    <div class="error-box" style="background: url('@Url.Content("~/admin/assets/images/big/auth-bg.jpg")') no-repeat center center;">
        <div class="error-body center-align">
            <div class="card" style="width: 30%;margin: 0 auto;">
                <div class="card-content">
                    <span class="db"><img src="~/assets/img/logo-recipe-organizer-black.png" alt="logo" style="max-width:35%;" /></span>
                    <h6>@ViewData["Title"]</h6>
                    @if (TempData["ChangeError"] != null)
                    {
                        <div class="alert alert-success">
                            <p class="warning-msg"><i class="material-icons">warning</i> @TempData["ChangeError"]</p>
                        </div>
                    }
                    <form asp-area="Admin" asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal" role="form" style="margin-bot:10px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group label-floating" style="text-align:left; font-size:1rem; margin-top:10px;">
                            <label asp-for="OldPassword" class="control-label"></label>
                            <input asp-for="OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group label-floating" style="text-align:left; font-size:1rem; margin-top:10px;">
                            <label asp-for="NewPassword" class="control-label"></label>
                            <input asp-for="NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group label-floating" style="text-align:left; font-size:1rem; margin-top:10px;">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn full-width background-main-color text-white" style="margin-top:15px;">Change Password</button>
                    </form>
                    <div style=" margin-top:10px;">
                        <a class="forgot" id="forgot-password" asp-area="Admin" asp-controller="Account" asp-action="ForgotPassword" style="font-size:15px;">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>