@using System.Data
@model List<ParentCategory>

@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
}

<div class="col s12">
    <div class="card">
        <div class="card-content">
<h4 class="card-title">Add Category</h4>
<div class="table-responsive">

   

    <div class="modal-content">
    <form asp-area="Admin" asp-controller="Category" asp-action="AddCategory">

    <div class="row">
    <div class="input-field col s12">
    <input id="name" name="txtname" type="text" placeholder="input name category ....." required>
    <label for="name">Name</label>
    </div>
    </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input id="age" name="txtdescription" type="text" placeholder="input description ....." required>
                        <label for="age">Desciption</label>
                    </div>
                </div>

                <div class="row"> <div class="input-field col s12">
                    <select id="description" name="txtnameparent" required> 
                 
                    <option value="" disabled selected>Choose your option</option> 
                            @foreach( var item in Model)
                            {
                                <option value="@item.ParentId">@item.Title</option>

                            }
                        
                  
                
                </select>
                    <label for="description">Name Parent Category</label> </div> </div>
  




                <input class="btn modal-action modal-close waves-effect waves-light cyan" type="submit" value="Save">
    </form>
    </div>
   
  


   
</div>
  </div>
                        </div>
                    </div>
