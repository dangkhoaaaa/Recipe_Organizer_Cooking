@using System.Data
@model List<CategoryViewModel>

@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
}

<!-- render body here -->
<h4 class="card-title">Category list</h4>

<form asp-area="Admin" asp-controller="Category" asp-action="SearchCategory" method="get">
    <div class="row">
        <div class="input-field col s12">
            <input id="search" name="keyword" type="text" value="" placeholder="Input your keyword....">
            <label for="search">Search</label>
        </div>
    </div>
   
    <button type="submit" class="btn">Search</button>
</form>



<div class="table-responsive">
    @ViewBag.NotFind
    @if (Model != null && Model.Count>0)
    {
        <table id="demo-foo-addrow" class="table m-t-10 highlight contact-list no-wrap" data-sorting="true" data-paging="true" data-paging-size="6">
            <thead>
                <tr style="font-weight:bold;">
                    <th>No</th>

                    <th>Category Name</th>
                    <th>Category Parent Name</th>

                    <th>Description</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 0;
                    foreach (var user in Model)
                    {
                        counter += 1;
                        <tr>
                            <td>@counter</td>

                            <td>@user.title</td>
                            <td>@user.parent_name</td>
                            <td>@user.description</td>

                            <td>
                                <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory"
                                asp-route-id="@user.category_id" asp-route-name="@user.title">
                                    <i class="material-icons">assignment</i>
                                    <span > Update</span></a>
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory"
                                   asp-route-id="@user.category_id">
                                    <i class="material-icons">assignment</i>
                                    <span> Delete</span>
                                </a>
                            </td>
                          

                        </tr>
                    }
                }
            </tbody>
    </table>
    }
