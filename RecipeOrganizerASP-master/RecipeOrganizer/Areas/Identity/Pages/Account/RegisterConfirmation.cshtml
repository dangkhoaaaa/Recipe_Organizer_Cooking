@page "/register-confirm"
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}
   
<div id="page-title" class="padding-tb-30px gradient-white">
	<div class="container text-center">
		<ol class="breadcrumb opacity-5">
			<li><a href=@Url.Action("Index", "Home")>Home</a></li><span>>></span>
			<li class="active">Register confirm</li>
		</ol>
	</div>
</div>

<div class="container margin-bottom-100px">
	<div class="text-center">
		<img class="rounded mx-auto d-block" src="~/assets/img/confirm-email.png" alt="Confirm email" style="max-width:20%;">
		<h2 class="text-center text-red">Register confirm email</h2>
		<p style="font-size:20px; margin-top:1rem;">
			Please check your email to confirm your account.
		</p>
	</div>
</div>
   

